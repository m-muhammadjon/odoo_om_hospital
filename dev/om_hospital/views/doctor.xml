<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="gender"/>
                        <field name="ref"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="gender"/>
                <field name="ref"/>
            </tree>
        </field>
    </record>

    <record id="view_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="gender"/>
            </search>
        </field>
    </record>


    <record id="action_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_child':1}</field>
        <field name="search_view_id" ref="om_hospital.view_hospital_doctor_search"/>
    </record>

    <menuitem id="menu_doctor"
              name="Doctor"
              parent="menu_hospital_master_data"
              action="action_hospital_doctor"
              sequence="10"/>
</odoo>